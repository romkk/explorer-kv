namespace fbe;  // flatbuffers explorer

table TxInput {
  script_asm: string;
  script_hex: string;
  sequence: long;
  prev_tx_hash: string;
  prev_position: int;  // coinbase tx prev_postion = -1, prev_value = 0
  prev_value: long;
  prev_addresses: [string];
}

table TxOutput {
  addresses: [string];
  value: long;
  script_asm: string;
  script_hex: string;
  script_type: string;
}

// 01_{tx_hash}
table Tx {
  height: int;
  position_in_block: int;
  is_coinbase: bool;
  version: int;
  lock_time: uint;
  size: int;
  fee: long;
  inputs: [TxInput];
  inputs_count: int;
  inputs_value: long;
  outputs: [TxOutput];
  outputs_count: int;
  outputs_value: long;
  created_at: string;
}

// 02_{tx_hash}
table TxSpentBy {
  tx_hash: string;
  position: int;
}

// 11_{block_hash}
table Block {
  version: int;
  mrkl_root: string;
  timestamp: uint;
  bits: uint;
  nonce: uint;
  prev_block_hash: string;
  next_block_hash: string;
  size: int;
  pool_difficulty: long;
  difficulty: double;
  tx_count: uint;
  reward_block: long;
  reward_fees: long;
  created_at: string;
}

// 12_{block_hash}_{n}
table BlockTxsHash {
  hash_str: string;
}

// 20_{address}
struct Address {
  tx_count: int;
  received: long;
  sent: long;
  unconfirmed_tx_count: int;
  unconfirmed_received: long;
  unconfirmed_sent: long;
  unspent_tx_count: int;
  unspent_tx_index: int;
  last_confirmed_tx_idx: int;
  created_at: uint;
  updated_at: uint;
}

// 21_{address}_{index}
table AddressTx {
  tx_hash: string;
  tx_height: int;
  ymd: int;
  balance_diff: long;
}

// 22_{address}_{tx_hash}
table AddressTxIdx {
  index: int;  // 地址最大交易数量为int
}

// 23_{address}_{index}
table AddressUnspent {
  tx_hash: string;
  position: int;
  position2: short;  // 16 bit: short ushort
  value: long;
}

// 24_{address}_{tx_hash}_{position}
table AddressUnspentIdx {
  index: int;
}

// 30_{tx_hash}_{position}
table DoubleSpending {
  txs: [string];
}
